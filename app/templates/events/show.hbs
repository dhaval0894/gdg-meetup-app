<div class="col-md-offset-2 col-md-8">
  <div class="panel panel-success">
    <div class="panel-heading">      
        <div class="row">
          <div class="col-md-6">
            <h4>Event Details</h4>   
          </div>
          <div class="col-md-6 text-right">
          	{{#link-to 'events.edit' model class='btn btn-sm btn-primary'}}Edit{{/link-to}}  
            <button {{action 'destroyEvent' model}} class="btn btn-sm btn-danger">Delete</button>
          </div>
        </div>
      
    </div>
    <div class="panel-body">
      <h1>
        {{model.name}}
      </h1>
      <p>
        {{model.description}}
      </p>
      <p class="text-muted">
        Agenda: {{model.agenda}}
      </p>
      <p class="lead text-info">
        Venue: {{model.venue}} <br>
        <small>
          Date: 
          {{#if model.eventDate}}
            {{moment-format model.eventDate 'DD-MM-YYYY'}}  
          {{else}}
            N/A
          {{/if}}  
        </small>
      </p>
    </div>
  </div>

</div>